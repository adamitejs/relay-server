{
  "name": "@adamite/relay-server",
  "version": "0.1.0",
  "description": "A server for Adamite services.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "watch": "tsc-watch",
    "prepare": "npm run build"
  },
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "jsonwebtoken": "^8.5.1",
    "node-fetch": "^2.3.0",
    "socket.io": "^2.2.0"
  },
  "devDependencies": {
    "@types/core-js": "^2.5.0",
    "@types/jest": "^24.0.13",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/node-fetch": "^2.3.3",
    "@types/socket.io": "^2.1.2",
    "husky": "^2.2.0",
    "jest": "^24.7.1",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "ts-jest": "^24.0.2",
    "tsc-watch": "^2.2.0",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
